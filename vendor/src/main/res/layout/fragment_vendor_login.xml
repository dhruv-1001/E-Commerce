<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Login.VendorLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="LOGIN"
            android:layout_gravity="center"
            android:fontFamily="@font/myriadpro_bold"
            android:textColor="@color/vendor_text_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:ems="20"
            android:hint="@string/email_id"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="14sp"
            android:fontFamily="@font/myriadpro_regular"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:background="@drawable/background_edit_text"
            android:layout_marginTop="32dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:ems="20"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:hint="@string/password"
            android:fontFamily="@font/myriadpro_regular"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:background="@drawable/background_edit_text"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/myriadpro_semibold"
            android:background="@drawable/background_button"
            android:text="Login"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't have an account?"
            android:layout_marginTop="52dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/myriadpro_semibold"
            android:textColor="@color/vendor_base_color"
            android:text="@string/create_account" />


    </LinearLayout>

</FrameLayout>