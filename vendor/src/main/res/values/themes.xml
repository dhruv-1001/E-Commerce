<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECommerce" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vendor_base_color</item>
        <item name="colorPrimaryVariant">@color/vendor_base_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vendor_edit_text_background</item>
        <item name="colorSecondaryVariant">@color/vendor_et_text_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style
        name="BottomNavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/myriadpro_semibold</item>
    </style>

    <style
        name="BottomNavigationView.Active">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/myriadpro_bold</item>
    </style>

</resources>